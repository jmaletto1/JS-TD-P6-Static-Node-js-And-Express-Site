extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      //- Portfolio Header 
      h1 A Collection of Extraordinary Events!

      //- Portfolio Description
      p.lead.text-light
        | That got your attention! Please feel free to peruse my most recent projects below, all completed with the likes of
        | React, Express, Sequelize, Node.js, jQuery, and Standard Javascript. If you have an interesting idea for a project, please feel
        | free to email me at 
        a(href="mailto:johnnydausten@gmail.com") johnnydausten@gmail.com.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val in data
        .cell
          a(href=`/projects/${val.id}`)
            img.thumbnail(src=`${val.image_urls[0]}`)
            h5 #{val.project_name}
      
